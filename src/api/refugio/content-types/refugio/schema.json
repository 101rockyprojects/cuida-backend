{
  "kind": "collectionType",
  "collectionName": "refugios",
  "info": {
    "singularName": "refugio",
    "pluralName": "refugios",
    "displayName": "Mi Refugio"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-zA-Z\\s.]*$",
      "maxLength": 80
    },
    "slug": {
      "type": "uid",
      "targetField": "nombre"
    },
    "servicios": {
      "type": "customField",
      "options": [
        "Rescate",
        "Sanación",
        "Vacunación",
        "Esterilización"
      ],
      "required": true,
      "customField": "plugin::multi-select.multi-select"
    },
    "descripcion": {
      "type": "text",
      "required": true,
      "maxLength": 550
    },
    "direccion": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "fecha_fundacion": {
      "type": "date",
      "required": true,
      "private": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "fotos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "nequi": {
      "type": "string",
      "required": false,
      "unique": true,
      "regex": "3[0-9]{9}",
      "maxLength": 10,
      "minLength": 10
    },
    "daviplata": {
      "type": "string",
      "regex": "3[0-9]{9}",
      "maxLength": 10,
      "minLength": 10
    },
    "paypal": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "link_facebook": {
      "type": "string",
      "unique": true
    },
    "link_instagram": {
      "type": "string",
      "unique": true
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "representante": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::representante.representante",
      "mappedBy": "refugio"
    },
    "necesidades": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::necesidad.necesidad",
      "mappedBy": "refugio"
    }
  }
}
